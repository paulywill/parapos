<div class="container-fluid">
  <h1 class="text-center">Listing Packers</h1>

  <div class="text-center">
    <%= link_to 'New Packer', new_packer_path %> | <br>
  </div>
  <br>
  <div class="digg_pagination">
    <%= will_paginate @packers, :container => false %>
  </div>
  

  <div class="text-center">
    <table id=listtable CELLPADDING=4  border="1"  class="table" >
      <tr>
        <th>Name</th>
        <th>Rating Date</th>
        <th>Team Status </th>
        <th colspan="3"></th>

      </tr>

      <% @packers.each do |packer| %>
        <tr class="<%= cycle('rowA', 'rowB') %>">
        <%  if (packer.team == true )
              dcolor="TD BGCOLOR=#00ff00"
            else
              dcolor="TD BGCOLOR=#ff0000"
            end %>

          <td><%= packer.name %></td>
          <td><%= packer.rating_date %></td>
          <td <%=dcolor%> >
            <%= team_display :boolStatus => packer.team %>
          </td>

          <td><%= link_to 'Show', packer %></td>
          <td><%= link_to 'Edit', edit_packer_path(packer) %></td>
          <td><%= link_to 'Destroy', packer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
       <tr>
        <td colspan = '100%'>
          <div class="digg_pagination">
            <div class="page_info">
              <%= page_entries_info @packers %>
            </div>
            <%= will_paginate @packers,  :container => false %>
          </div>
        </td>
      </tr>
    </table>
  </div>          

  <br>

  <%= link_to 'New Packer', new_packer_path %> |
  <%= link_to 'Packjobs', packjobs_path %> |
  <%= link_to 'Rigs', rigs_path %> |

</div>
